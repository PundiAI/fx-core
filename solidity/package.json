{
  "name": "@functionx_io/contracts",
  "description": "Smart Contract library for Solidity",
  "version": "0.2.1",
  "files": [
    "/contracts/**/*.sol",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat compile && npx hardhat typechain && npx hardhat test",
    "clean": "npx hardhat clean && rm -rf ./build ./contracts/build",
    "lint:sol": "npx solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "typechain": "npx hardhat typechain",
    "fork": "npx hardhat node --fork ${NETWORK_URL}",
    "fork:blocknumber": "npx hardhat node --fork ${NETWORK_URL} --fork-block-number ${BLOCK_NUMBER}"
  },
  "keywords": [
    "solidity",
    "evm",
    "crosschain",
    "staking",
    "bridge call"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FunctionX/fx-core.git"
  },
  "bugs": {
    "url": "https://github.com/FunctionX/fx-core/issues"
  },
  "homepage": "https://github.com/FunctionX/fx-core/blob/main/solidity/README.md",
  "license": "Apache-2.0",
  "dependencies": {
    "@ethers-ext/signer-ledger": "^6.0.0-beta.1",
    "@ledgerhq/hw-transport-node-hid": "^6.28.1",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@openzeppelin/contracts": "^4.9.6",
    "@openzeppelin/contracts-upgradeable": "4.9.6",
    "@types/chai": "^4.3.9",
    "@types/mocha": "^10.0.3",
    "chai": "^4.3.10",
    "hardhat-ignore-warnings": "^0.2.11",
    "inquirer": "^8.1.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/inquirer": "^7.3.1",
    "axios": "^0.28.0",
    "bech32": "^2.0.0",
    "ethers": "^6.1.0",
    "hardhat": "^2.19.4",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-dev.23",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "^5.0.4"
  }
}
